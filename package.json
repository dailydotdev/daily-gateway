    "koa-jwt": "^3.3.2",
    "koa-pino-logger": "^2.1.1",
    "koa-proxies": "^0.8.1",
    "koa-router": "^7.2.1",
    "koa-useragent": "^4.0.0",
    "lodash": "^4.17.19",
    "mysql": "^2.15.0",
    "pino": "^4.7.3",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.9",
    "shortid": "^2.2.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",

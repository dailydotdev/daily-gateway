    "eslint-plugin-chai-friendly": "^0.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^4.11.0",
    "knex-cleaner": "^1.1.4",
    "mocha": "^8.1.3",
    "mocha-junit-reporter": "^1.23.0",
    "nock": "^9.4.2",
    "nodemon": "^2.0.4",
    "sinon": "^4.0.1",
    "sinon-chai": "^2.14.0",
    "supertest": "^3.0.0"
  }
